# Основные настройки приложения
PORT=5000
NODE_ENV=development
JWT_SECRET=ваш_секретный_ключ_для_jwt

# MongoDB подключение
MONGODB_URI=mongodb://localhost:27017/esports-mood-tracker
# MongoDB Atlas подключение (раскомментируйте и замените значение для деплоя на Vercel)
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/esports-mood-tracker?retryWrites=true&w=majority

# FACEIT API и OAuth настройки
FACEIT_API_KEY=ваш_ключ_faceit_api
FACEIT_CLIENT_ID=ваш_faceit_client_id
FACEIT_CLIENT_SECRET=ваш_faceit_client_secret
REDIRECT_URI=http://localhost:5000/api/faceit/oauth/callback

# Vercel переменные окружения (добавьте в проекте Vercel)
# VERCEL_URL=your-app.vercel.app

# Другие настройки
LOG_LEVEL=debug
